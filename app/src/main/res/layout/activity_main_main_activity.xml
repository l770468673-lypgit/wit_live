<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.wit_live.main_fragment.main_main_activity">




    <LinearLayout
        android:background="#985abb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/search"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/hometab"
            android:layout_width="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:tabIndicatorColor="#f00"
            app:tabSelectedTextColor="#ff0"
            app:tabTextColor="#fff"

            />

        <ImageButton
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/home_message_vvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hometab"/>
</LinearLayout>
